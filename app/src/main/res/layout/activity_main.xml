<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/inputArea"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="40sp"
            android:text="game lô tô"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/textViewSomin"
            android:maxLength="3"
            android:inputType="number"
            android:padding="4dp"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:hint="Số Min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/textViewSomax"
            android:imeOptions="actionDone"
            android:maxLength="3"
            android:inputType="number"
            android:padding="4dp"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:hint="Số Max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/buttonAddRange"
        android:layout_below="@+id/inputArea"
        android:text="ADD RANGE"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/buttonReset"
        android:layout_below="@+id/buttonAddRange"
        android:text="RESET"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonReset"
        android:id="@+id/buttonRandom"
        android:text="RANDOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewKetqua"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:hint="01-02-05-95-89......"
        android:layout_below="@+id/buttonRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>